{
  "name": "noisescape",
  "version": "1.0.0",
  "description": "todo",
  "main": "src/main.js",
  "scripts": {
    "test": "jest",
    "start": "electron .",
    "start:sim": "electron .",
    "start:cyton": "BOARD_TYPE=cyton electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rami-nk/noisescape.git"
  },
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/rami-nk/noisescape/issues"
  },
  "homepage": "https://github.com/rami-nk/noisescape#readme",
  "build": {
    "appId": "com.noisescape.app",
    "productName": "NoiseScape",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "static/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "static/assets/logo.png",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "static/assets/logo.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "static/assets/logo.png",
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "brainflow": "^5.13.0",
    "chart.js": "^4.5.0"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.0.4"
  }
}
